<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.thishouse.mapper.WishlistMapper">

    <select id="getFavoritesByUserId" resultType="java.util.HashMap">
        SELECT * FROM wishlist, house_list WHERE wishlist.house_num = house_list.house_num AND user_id = #{user_id}
    </select>

    <insert id="addFavoriteItem" parameterType="com.example.thishouse.domain.Wishlist">
        INSERT INTO wishlist (user_id, house_num) VALUES (#{user_id}, #{house_num})
    </insert>

    <delete id="removeFavoriteItem" parameterType="com.example.thishouse.domain.Wishlist">
        DELETE FROM wishlist WHERE user_id = #{user_id} AND house_num = #{house_num}
    </delete>

</mapper>